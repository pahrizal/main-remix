{
  "name": "main-remix",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "sideEffects": false,
  "main": "build/index.js",
  "scripts": {
    "build": "npm-run-all build:clean build:css build:remix",
    "build:all": "npm-run-all build:clean build:css build:remix build:dist build:bundle build:docker",
    "build:clean": "rimraf ./public/build ./dist/*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:dist": "cp -r ./public ./build ./package.json ./yarn.lock ./dist/",
    "build:bundle": "cd ./dist/ && zip -r ../dist.zip *",
    "build:docker": "docker-compose build",
    "dev": "remix build && run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon ./build/index.js --watch ./build/index.js",
    "dev:remix": "remix watch",
    "generate:css": "npx tailwindcss -o ./app/assets/styles/tailwind.css",
    "postinstall": "remix setup node",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "heroku:push-staging": "heroku container:push web -a main-remix-staging",
    "heroku:release-staging": "heroku container:release web -a main-remix-staging",
    "heroku:staging": "npm-run-all build heroku:push-staging heroku:release-staging",
    "heroku:push-prod": "heroku container:push web -a main-remix",
    "heroku:release-prod": "heroku container:release web -a main-remix",
    "heroku:prod": "npm-run-all build heroku:push-prod heroku:release-prod"
  },
  "dependencies": {
    "@remix-run/express": "^1.3.3",
    "@remix-run/react": "^1.3.3",
    "clsx": "^1.1.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.17.3",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-transition-group": "^4.4.2",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "remix": "^1.3.3",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "use-copy": "^0.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.3.3",
    "@remix-run/eslint-config": "^1.3.3",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-transition-group": "^4.4.4",
    "@types/uuid": "^8.3.4",
    "eslint": "^8.12.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "redux-devtools-extension": "^2.13.9",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
